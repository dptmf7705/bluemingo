<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<!-- Last Edit 2017-02-16 
	
-->
<mapper namespace="com.bluemingo.bluemingo.domain.UserVOMapper">


	<select id="search" resultType="com.bluemingo.bluemingo.domain.UserVO">
		SELECT * 
		FROM `user` 
		WHERE user_id = #{search_key};
	</select>
	
	<select id="procedure_get_role" resultType="String">
		SELECT role_name
		FROM `authority` 
		WHERE user_id = #{search_key};
	</select>

</mapper>